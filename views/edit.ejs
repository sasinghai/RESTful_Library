<%- include ("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">Edit <%= book.title %></div>
	
	<form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="book[title]" value="<%= book.title %>">
		</div>
		<div class="field">
			<label>image</label>
			<input type="text" name="book[image]" value="<%= book.image %>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="book[body]" required><%= book.body %></textarea> 
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
	
	
	
</div>
<%- include ("partials/footer") %>


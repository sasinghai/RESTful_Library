<%- include ("partials/header") %>
<div class="ui main text container segment">
	<div class="ui huge header">New Book</div>
	
	
	<form class="ui form" action="/books" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="book[title]" placeholder="name">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="book[image]" placeholder="image url">
		</div>
		<div class="field">
			<label>Book Content</label>
			<textarea name="book[body]" required></textarea> 
		</div>
		<input class="ui violet big basic button" type="submit">
	</form>
	
	
	
</div>
<%- include ("partials/footer") %>

